<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bmu.a67thmilestone.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ViewFlipper
                    android:id="@+id/view_flipper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoStart="true"
                    android:flipInterval="2000">


                    <Button
                        android:layout_width="match_parent"
                        android:background="@drawable/flip4"
                        android:layout_height="200dp"
                        />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/flip3"
                        />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/flip2"
                        />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/flip5"
                        />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/flip6"
                    />
                </ViewFlipper>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:weightSum="2">


                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Events"
                    android:textSize="30sp"
                    android:layout_marginTop="5dp"
                    android:textAllCaps="false"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/events"
                    android:onClick="Events"
                    android:textColor="#ffff" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Schedule"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="30sp"
                    android:alpha="1.2"
                    android:background="@drawable/scheduleone"
                    android:onClick="Schedule"
                    android:textAllCaps="false"
                    android:textColor="#ffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:onClick="pro"
                    android:background="@drawable/pronite"
                    android:text="Pronites"
                    android:textAllCaps="false"
                    android:textColor="#ffff"
                    android:textSize="30sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Notification"
                    android:onClick="noti"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="30sp"
                    android:background="@drawable/blog"
                    android:textAllCaps="false"
                    android:textColor="#ffff" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Fee Details"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fee"
                    android:textSize="30sp"
                    android:onClick="fee"
                    android:textAllCaps="false"
                    android:textColor="#ffff" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:text="Favourites"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:onClick="fav"
                    android:background="@drawable/notification"
                    android:textAllCaps="false"
                    android:textColor="#ffff" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Maps"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/maps"
                    android:textSize="30sp"
                    android:onClick="maps"
                    android:textAllCaps="false"
                    android:textColor="#ffff" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Our Team"
                    android:alpha="1.2"
                    android:onClick="OurTeam"
                    android:layout_marginTop="5dp"
                    android:textSize="30sp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ourteam"
                    android:textAllCaps="false"
                    android:textColor="#ffff" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Blog"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/noti"
                    android:textSize="30sp"
                    android:onClick="blog"
                    android:textAllCaps="false"
                    android:textColor="#ffff" />




            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
