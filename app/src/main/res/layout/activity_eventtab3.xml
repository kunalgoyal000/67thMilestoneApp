<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bmu.a67thmilestone.eventtab3"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ourteamshape1"
                    android:layout_weight="1"
                    android:onClick="junkyardwars"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/junkyard"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Junkyard Wars"
                        android:textSize="25dp"
                        android:textColor="#000"
                        android:gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/ourteamshape1"
                    android:layout_height="180dp"
                    android:gravity="center"
                    android:onClick="treasurehunt"
                    android:layout_margin="10dp"
                    android:orientation="vertical"

                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/th"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Treasure Hunt"
                        android:textSize="25dp"
                        android:textColor="#000"
                        android:gravity="center"
                        />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ourteamshape1"
                    android:layout_weight="1"
                    android:onClick="vsmarket"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/vsm"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Virtual Stock Market"
                        android:textSize="25dp"
                        android:textColor="#000"
                        android:gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="180dp"
                    android:gravity="center"
                    android:onClick="slampoetry"
                    android:background="@drawable/ourteamshape1"
                    android:layout_margin="10dp"
                    android:orientation="vertical"

                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/slam"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Slam Poetry"
                        android:textSize="25dp"
                        android:textColor="#000"
                        android:gravity="center"
                        />
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:onClick="brain_iot"
                    android:layout_margin="10dp"
                    android:background="@drawable/ourteamshape1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/iot" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brainweave IOT Workshop"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="180dp"
                    android:gravity="center"
                    android:onClick="brain_robo"
                    android:background="@drawable/ourteamshape1"
                    android:layout_margin="10dp"
                    android:orientation="vertical"

                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:src="@drawable/brain_weave"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brainweave Robotics Workshop"
                        android:textSize="16dp"
                        android:textColor="#000"
                        android:gravity="center"
                        />
                </LinearLayout>



            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            >



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/ourteamshape1"
                android:layout_height="180dp"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="hallsofsummer"
                >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/hallsof_summer"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Halls of Summer"
                    android:textSize="25dp"
                    android:textColor="#000"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="70dp"
                android:src="@drawable/eventmainpage"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>


